#!/bin/sh /etc/rc.common

START=99
STOP=01
USE_PROCD=1

start_service() {
  procd_open_instance
  procd_set_param command /usr/bin/fancontrol_loop
  procd_set_param respawn 3600 5 5
  procd_set_param stdout 1
  procd_set_param stderr 1
  procd_close_instance
}

stop_service() {
  logger -t fancontrol "Fan control stopped, kernel thermal framework resumed"
}
